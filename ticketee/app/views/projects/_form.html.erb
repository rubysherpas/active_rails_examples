<%= form_with(model: project, class: "form") do |form| %>
  <% if project.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(project.errors.count, "error") %>
    prohibited this project from being saved:</h2>

    <ul>
      <% project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: "text-field" %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, class: "text-area" %>
  </div>

  <%= form.submit class: "button-primary" %>
<% end %>
